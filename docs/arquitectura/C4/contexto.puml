@startuml
!define RECTANGLE class
!define PERSON actor

RECTANGLE "Clientes Service" as clientesService {
    + GET /clientes
    + POST /clientes
    + PUT /clientes/{id}
    + DELETE /clientes/{id}
}

RECTANGLE "Productos Service" as productosService {
    + GET /productos
    + POST /productos
    + PUT /productos/{id}
    + DELETE /productos/{id}
}

RECTANGLE "Ventas Service" as ventasService {
    + GET /ventas
    + POST /ventas
    + PUT /ventas/{id}
    + DELETE /ventas/{id}
}

PERSON "Usuario" as usuario

' El usuario interactúa con todos los microservicios
usuario --> clientesService : Interactúa vía REST
usuario --> productosService : Interactúa vía REST
usuario --> ventasService : Interactúa vía REST

' Ventas valida datos vía HTTP, no accede directo a DB
ventasService --> clientesService : Verifica cliente (HTTP)
ventasService --> productosService : Verifica producto (HTTP)
@enduml
