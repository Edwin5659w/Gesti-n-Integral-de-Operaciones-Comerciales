@startuml
!define RECTANGLE class
!define PERSON actor

RECTANGLE "Clientes Service" as clientesService {
    + GET /clientes
    + POST /clientes
    + PUT /clientes/{id}
    + DELETE /clientes/{id}
}

RECTANGLE "Productos Service" as productosService {
    + GET /productos
    + POST /productos
    + PUT /productos/{id}
    + DELETE /productos/{id}
}

RECTANGLE "Ventas Service" as ventasService {
    + GET /ventas
    + POST /ventas
    + PUT /ventas/{id}
    + DELETE /ventas/{id}
}

PERSON "Usuario" as usuario

usuario --> clientesService : Interactúa
usuario --> productosService : Interactúa
usuario --> ventasService : Interactúa

clientesService --> productosService : Solicita información de productos
ventasService --> clientesService : Verifica información del cliente
ventasService --> productosService : Verifica disponibilidad de productos

@enduml